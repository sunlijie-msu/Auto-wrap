{
  "name": "ensdf-auto-wrap",
  "displayName": "ENSDF Auto Wrap",
  "description": "Auto-wrap text to 80 columns for ENSDF formatting",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunlijie-msu/Auto-wrap.git"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "20.x",
    "typescript": "^4.8.4",
    "@types/node": "20.x"
  },
  "activationEvents": [
    "onCommand:ensdf.wrap80",
    "onCommand:ensdf.wrap80selected",
    "onCommand:ensdf.toggleAutoWrap",
    "onCommand:ensdf.extractNSRKeynumber"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ensdf.wrap80",
        "title": "Wrap all ENSDF lines to 80 Columns"
      },
      {
        "command": "ensdf.wrap80selected",
        "title": "Wrap selected ENSDF lines to 80 columns"
      },
      {
        "command": "ensdf.toggleAutoWrap",
        "title": "Toggle Auto Wrap ENSDF"
      },
      {
        "command": "ensdf.extractNSRKeynumber",
        "title": "Extract NSR Keynumber"
      }
    ]
  }
}
